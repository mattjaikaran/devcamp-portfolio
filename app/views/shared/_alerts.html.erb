<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => 'Matt Jaikaran Portfolio', sticky: false, time: 4000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => 'Matt Jaikaran Portfolio', sticky: false, time: 4000) %>
<% else %>
  <%= js add_gritter(flash[:notice], :title => 'Matt Jaikaran Portfolio', sticky: false, time: 4000) %>
<% end %>
